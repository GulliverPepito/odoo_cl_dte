						<div class="tablecorner" id="table_client_data">
						<div id="row">
						<div id="data">
						 Señor(es)
						</div>
						<div id="values">
						 : <span t-field="o.partner_id.name"></span>
						</div>
						<div id="right">
						Fecha
						</div>
						</div>
						<div id="row">
						<div id="data">
